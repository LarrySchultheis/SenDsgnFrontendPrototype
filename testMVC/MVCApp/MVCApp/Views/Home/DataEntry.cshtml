
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Login Page";
}


<!DOCTYPE html>

<h2 class="display-4">New Data Entry</h2>
<br />
<br />

<form class="form-horizontal" asp-action="PostEntry" , asp-controller="Home">
    <div class="form-group">
        <label class="control-label col-sm-2" for="jType">Job Type:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="jType">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="tripNo">Trip Number:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="tripNo">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="stgNo">Stage Number:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="stgNo">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="empName">Employee Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="empName">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="startTime">Start Time:</label>
        <div class="col-sm-10">
            <input type="time" class="form-control" id="startTime">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn-dark">Submit</button>
        </div>
    </div>
</form>
